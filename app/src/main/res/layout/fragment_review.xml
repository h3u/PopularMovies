<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark">
    <TextView
        android:id="@+id/movie_detail_review_author"
        android:textColor="@color/bright_foreground_material_dark"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" />
    <com.bluejamesbond.text.DocumentView
        android:id="@+id/movie_detail_review_content"
        xmlns:ext="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        ext:documentView_textSize="@dimen/abc_text_size_body_1_material"
        ext:documentView_textColor="@color/bright_foreground_material_dark"
        ext:documentView_textAlignment="justified" />
</LinearLayout>