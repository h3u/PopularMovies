<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Detail view list element-->
    <style name="DetailListElementLayout">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/background_material_dark</item>
    </style>
    <style name="DetailListElementImage">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="DetailListElementText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">center|top</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
        <item name="android:textColor">@color/bright_foreground_material_dark</item>
    </style>

</resources>
